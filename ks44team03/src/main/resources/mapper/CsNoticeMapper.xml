<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="ks44team03.common.mapper.CustomerNoticeMapper">
	<!-- 배송스케줄 목록 조회 -->
	<resultMap type="CsSchedule" id="csScheduleResultMap">
		<id column="schedule_num_code" property="scheduleNumCode"/>
		<result column="e_code" property="employeeCode"/>
		<result column="schedule_title" property="scheduleTitle"/>
		<result column="schedule_content" property="scheduleContent"/>
		<result column="schedule_img" property="scheduleImg"/>
		<result column="schedule_date" property="scheduleDate"/>
		<result column="schedule_view" property="scheduleView"/>
	</resultMap>
	
	<!-- 공지사항 목록 조회  -->
	<resultMap type="CsNotice" id="csNoticeResultMap">
		<id column="notice_num" property="noticeNumCode" />
		<result column="e_code" property="employeeCode"/>
		<result column="notice_title" property="noticeTitle"/>
		<result column="notice_content" property="noticeContent"/>
		<result column="notice_img" property="noticeImg"/>
		<result column="notice_date" property="noticeDate"/>
		<result column="notice_view" property="noticeView"/>
	</resultMap>
	
	<!-- 배송스케줄 목록 조회 -->
	<select id="getCsScheduleList" resultMap="csScheduleResultMap">
	/* 배송스케줄 목록 조회 */
	SELECT 
		schedule_num_code
		,e_code
		,schedule_title
		,schedule_content
		,schedule_img
		,schedule_date
		,schedule_view
	FROM
		delivery_schedule
	</select>
	

	<!-- 공지사항 목록 조회 -->
	<select id="getCsNoticeList" resultMap="csNoticeResultMap">
	/*  공지사항 목록 조회      */
	SELECT
		notice_num
		,e_code
		,notice_title
		,notice_content
		,notice_img
		,notice_date
		,notice_view
	FROM
		notice_center
	</select>

</mapper>