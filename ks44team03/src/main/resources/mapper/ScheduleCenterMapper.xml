<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
 <mapper namespace="ks44team03.common.mapper.CustomerScheduleMapper">
	<!-- 배송스케줄 테이블  -->
	<resultMap type="ScheduleCenter" id="csScheduleResultMap">
		<id column="schedule_num_code" property="scheduleNumCode"/>
		<result column="e_code" property="employeeCode"/>
		<result column="schedule_title" property="scheduleTitle"/>
		<result column="schedule_content" property="scheduleContent"/>
		<result column="schedule_img" property="scheduleImg"/>
		<result column="schedule_date" property="scheduleDate"/>
<!-- 		<result column="schedule_view" property="scheduleView"/> -->
	</resultMap>
	
	
	<!-- 배송스케줄 등록 -->
	<insert id="regSchedule" parameterType="ScheduleCenter">
	INSERT INTO delivery_schedule
		(schedule_num_code
		,schedule_title
		,schedule_content
		,schedule_img
		,schedule_date
		,schedule_view)
	VALUES
	 (#{scheduleNumCode}, #{scheduleTitle}, #{scheduleContent}, #{scheduleImg}, NOW() , #{scheduleView})
	
	
	
	</insert>
	
	<!-- 배송스케줄 게시글 조회 -->
	<select id="getScheduleRead" resultMap="csScheduleResultMap">
	SELECT
		schedule_title
		,schedule_content
		,schedule_date
	FROM
		delivery_schedule
	WHERE
		schedule_num_code = #{scheduleNumCode};
	</select>
	
	
	<!-- 배송스케줄 목록 조회 -->
	<select id="getScheduleList" resultMap="csScheduleResultMap">
	/* 배송스케줄 목록 조회 */
	SELECT 
		schedule_num_code
		,e_code
		,schedule_title
		,schedule_content
		,schedule_img
		,schedule_date
		,schedule_view
	FROM
		delivery_schedule
	</select>
 
 
 </mapper>